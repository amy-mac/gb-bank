<!DOCTYPE html>
<html>
<head>
  <title>GbBank</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true, "cache" => false %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <% ["Raleway", "Open+Sans"].each do |family| %>
    <%=
      stylesheet_link_tag(
        "http://fonts.googleapis.com/css?family=#{family}",
        type: "text/css"
      )
    %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <% end %>
</head>
<body id="<%= page_specific_css_id %>">

  <header class="group">
    <h1><%= @page_title || "Gb Bank" %></h1>
    <nav>
      <ul>
        <li><%= link_to(t('members.index.members'), root_path) %></li>
        <li><%= link_to(t('navigation.create_member'), new_member_path) %></li>
        <li><%= link_to(t('navigation.create_transaction'), new_transaction_path) %></li>
      </ul>
    </nav>
  </header>

  <% flash.each do |name, messages| %>
    <div class=<%= name %>>
      <ul>
        <% if messages.is_a?(Array) %>
          <% messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        <% else %>
          <li><%= messages %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div role="main">
    <%= yield %>
  </div>

</body>
</html>
